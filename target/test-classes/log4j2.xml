<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Generate timestamp ONCE at startup -->
    <Properties>
        <Property name="startTime">${date:yyyy-MM-dd_HH-mm-ss}</Property>
    </Properties>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File with timestamp in name -->
        <File name="FileLogger"
              fileName="logs/log-${startTime}.log"
              append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Rolling File -->
        <RollingFile 
            name="RollingFile"
            fileName="logs/automation.log-${startTime}.log"
            filePattern="logs/automation-${startTime}-%i.log.gz">

            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>

            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>
